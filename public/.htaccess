# Noradark.com.tr - .htaccess Dosyası
# Son Güncelleme: 09.12.2025

Options -Indexes
Options +FollowSymLinks

# SEO URL Yönlendirmeleri
RewriteEngine On

# www'siz versiyona yönlendirme
RewriteCond %{HTTP_HOST} ^noradark\.com\.tr [NC]
RewriteRule ^(.*)$ https://www.noradark.com.tr/$1 [R=301,L]

# HTTPS yönlendirmesi
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://www.noradark.com.tr/$1 [R=301,L]

# Trailing slash ekleme/çıkarma
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)/$ /$1 [R=301,L]

# React Router için SPA yapılandırması
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_URI} !^/\.well-known/
RewriteRule ^ index.html [QSA,L]

# Güvenlik Başlıkları
<IfModule mod_headers.c>
    # XSS koruması
    Header set X-XSS-Protection "1; mode=block"
    
    # Clickjacking koruması
    Header set X-Frame-Options "SAMEORIGIN"
    
    # MIME türü sniffing koruması
    Header set X-Content-Type-Options "nosniff"
    
    # HSTS (Strict Transport Security) - 2025 standartları
    Header set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
    
    # Referrer-Policy
    Header set Referrer-Policy "strict-origin-when-cross-origin"
    
    # Permissions-Policy (eski Feature-Policy)
    Header set Permissions-Policy "geolocation=(), camera=(), microphone=(), payment=()"
    
    # Content-Security-Policy (CSP) - Temel ayar
    Header set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' https://cdn.jsdelivr.net; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self';"
    
    # X-Powered-By bilgisini gizleme
    Header unset X-Powered-By
    Header always unset X-Powered-By
    
    # Server bilgisini gizleme
    ServerSignature Off
</IfModule>

# Gzip sıkıştırma
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE text/javascript
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
    AddOutputFilterByType DEFLATE application/json
    AddOutputFilterByType DEFLATE application/font-woff
    AddOutputFilterByType DEFLATE application/font-woff2
    AddOutputFilterByType DEFLATE image/svg+xml
    
    # Eski tarayıcı desteği
    BrowserMatch ^Mozilla/4 gzip-only-text/html
    BrowserMatch ^Mozilla/4\.0[678] no-gzip
    BrowserMatch \bMSIE !no-gzip !gzip-only-text/html
</IfModule>

# Önbellekleme başlıkları - 2025 standartları
<IfModule mod_expires.c>
    ExpiresActive On
    
    # Varsayılan
    ExpiresDefault "access plus 1 month"
    
    # HTML
    ExpiresByType text/html "access plus 1 hour"
    
    # CSS ve JavaScript
    ExpiresByType text/css "access plus 1 year"
    ExpiresByType text/javascript "access plus 1 year"
    ExpiresByType application/javascript "access plus 1 year"
    ExpiresByType application/x-javascript "access plus 1 year"
    
    # Resimler
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/avif "access plus 1 year"
    
    # Fontlar
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType font/ttf "access plus 1 year"
    ExpiresByType font/otf "access plus 1 year"
    ExpiresByType font/eot "access plus 1 year"
    
    # Diğer
    ExpiresByType application/pdf "access plus 1 month"
    ExpiresByType application/xml "access plus 1 hour"
    ExpiresByType text/xml "access plus 1 hour"
</IfModule>

# Hata sayfaları
ErrorDocument 400 /error.html
ErrorDocument 401 /error.html
ErrorDocument 403 /error.html
ErrorDocument 404 /404.html
ErrorDocument 500 /error.html

# Hotlinking koruması
RewriteCond %{HTTP_REFERER} !^$
RewriteCond %{HTTP_REFERER} !^https://(www\.)?noradark\.com\.tr/.*$ [NC]
RewriteCond %{HTTP_REFERER} !^https://(www\.)?google\.com/.*$ [NC]
RewriteCond %{HTTP_REFERER} !^https://(www\.)?bing\.com/.*$ [NC]
RewriteRule \.(jpg|jpeg|png|gif|webp|avif|svg|css|js)$ - [F,L]

# WebP destek kontrolü (isteğe bağlı)
<IfModule mod_rewrite.c>
    RewriteCond %{HTTP_ACCEPT} image/webp
    RewriteCond %{DOCUMENT_ROOT}/$1.webp -f
    RewriteRule ^(path/to/images.+)\.(jpe?g|png)$ $1.webp [T=image/webp,E=accept:1]
</IfModule>

<IfModule mod_headers.c>
    Header append Vary Accept env=REDIRECT_accept
</IfModule>